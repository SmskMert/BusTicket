@model List<Bus>

<div class="d-flex justify-content-between align-items-center">
    <div class="display-6 text-primary ms-2 text-center">
        Bus List
    </div>
    <div>
        <a asp-controller="Operator" asp-action="CreateBus" class="btn btn-primary">Create Bus</a>
    </div>
</div>
<hr>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Capacity</th>
            <th scope="col">Has Seat Screen</th>
            <th scope="col">Has USB</th>
            <th scope="col">Has Wifi</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bus in Model)
        {
            <tr>
                <td>@bus.Id</td>
                <td>@bus.Capacity</td>
                <td>@bus.HasSeatScreen</td>
                <td>@bus.HasUSB</td>
                <td>@bus.HasWifi</td>

                <td>
                    <div>
                        <a type="button" class="btn btn-outline-warning" asp-controller="Operator" asp-action="UpdateBus" asp-route-id=@bus.Id>Update</a>
                        <a asp-controller="Operator" asp-action="DeleteBus" asp-route-id=@bus.Id type="button" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
